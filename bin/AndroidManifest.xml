<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.horizontalimageview"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.example.horizontalimageview.ImageApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name="com.example.horizontalimageview.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.horizontalimageview.AutoActivity"
            android:label="@string/title_activity_final" >
            <intent-filter>
                <action android:name="com.example.horizontalimageview.AutoActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.horizontalimageview.ArrangeActivity"
            android:label="@string/title_activity_arrange" >
            <intent-filter>
                <action android:name="com.example.horizontalimageview.ArrangeActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.horizontalimageview.MannualActivity"
            android:label="@string/title_activity_mannual" >
            <intent-filter>
                <action android:name="com.example.horizontalimageview.MannualActivity" />
                <action android:name="android.intent.action.GET_CONTENT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.horizontalimageview.ShowTwoway"
            android:label="@string/title_activity_show_twoway" >
        </activity>
    </application>

</manifest>